{
    "name": "mr-luke/settings-manager",
    "description": "Laravel Package that provides settings manager with type casting.",
    "keywords": ["settings", "manager", "laravel"],
    "type": "library",
    "license": "MIT",
    "version": "2.0.0",
    "authors": [
        {
            "name": "≈Åukasz Sitnicki",
            "email": "lukasz.sitnicki@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^12.0|^11.0|^10.0|^9.0|^8.0",
        "mr-luke/configuration": "^1.0"
    },
    "require-dev": {
        "fakerphp/faker": "*",
        "mockery/mockery": "*",
        "orchestra/testbench": "*",
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "Mrluke\\Settings\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Mrluke\\Settings\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mrluke\\Settings\\SettingsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
